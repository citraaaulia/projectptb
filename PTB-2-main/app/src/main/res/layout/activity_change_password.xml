<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:backgroundTint="@color/primaryColor"
            android:drawableTop="@drawable/chevron_left"
            android:text="Back"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif-black"
            android:text="Buat Kata Sandi Baru"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Buat password baru anda untuk login"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="87dp"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/textView10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"/>

        <EditText
            android:id="@+id/inputpass1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView11"
            android:layout_marginTop="70dp"
            android:layout_marginStart="50dp"
            android:hint="Enter your new password"
            android:drawableLeft="@drawable/password"/>

        <EditText
            android:id="@+id/inputpass2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputpass1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:hint="confirm your new password"
            android:drawableLeft="@drawable/password"/>

        <Button
            android:id="@+id/btnreset"
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/inputpass2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/primaryColor"
            android:text="Ganti kata sandi"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>